<%= simple_form_for(@equipment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :code %>
    <%= f.input :class_equipment %>
    <%= f.input :type_equipment %>
    <%= f.input :manufacturer %>
    <%= f.input :platform %>
    <%= f.input :model_number %>
    <%= f.input :os %>
    <%= f.input :total_memory_ram %>
    <%= f.input :processor %>
    <%= f.input :total_storage %>
    <%= f.input :purchase_date %>
    <%= f.input :warranty_expires %>
    <%= f.input :details %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
